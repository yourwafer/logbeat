{
  "mysqlSources": {
    "charge-query": {
      "sql": "SELECT (ChargeOrder.target >> 40) & conv(\"3FFFL\",16,10) as server,(ChargeOrder.target >> 54) & conv(\"1FFL\",16,10) as operator,Account.name,ChargeOrder.completeAt as time,ChargeOrder.goods as goodsId,ChargeOrder.money,ChargeOrder.orderId,ChargeOrder.serial from ChargeOrder,Account where ChargeOrder.deal='1' and Account.id = ChargeOrder.target;",
      "interval": 60
    }
  },
  "events": [
    {
      "name": "charge_record",
      "describe": "充值事件",
      "source": {
        "type": "mysql",
        "name": "charge-query"
      },
      "uploadType": "track",
      "fields": {
        "server": 1,
        "operator": 2,
        "#account_id": 3,
        "#time": 4,
        "goodsId": 5,
        "money": 6,
        "orderId": 7,
        "serial": 8
      },
      "type": {
        "server": "java.lang.Integer",
        "operator": "java.lang.Integer",
        "#account_id": "java.lang.String",
        "#time": "java.util.Date",
        "goodsId": "java.lang.String",
        "money": "java.lang.Integer",
        "orderId": "java.lang.String",
        "serial": "java.lang.Long"
      },
      "defaultValue": {
        "game": "djx"
      }
    }
  ]
}